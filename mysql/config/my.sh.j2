#!/bin/bash

function start() {
  echo "start"
  mysqld_safe --defaults-file={{ mysql_home_dir }}/my.cnf --user={{ mysql_user }} &
}

function stop() {
  echo "stop"
  mysqladmin shutdown
}

function restart() {
  echo "restart"
  stop
  start
}

case "${@: -1}" in
  start )
    start
    ;;
  stop )
    stop
    ;;
  restart )
    restart
    ;;
  remove )
    remove
    ;;
  * )
    echo "sh my.sh start | stop | restart "
    ;;
esac
